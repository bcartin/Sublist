<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LogInActivity">

    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp" app:srcCompat="@drawable/logo"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="120dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Log In To The Sublist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:textColor="@android:color/black"
            android:textStyle="bold" android:textSize="26sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailText"
            android:hint="Email" android:background="@drawable/edit_text_rounded"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" android:padding="10dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordText"
            android:hint="Password" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="32dp" android:layout_marginEnd="32dp" android:padding="10dp"
            android:background="@drawable/edit_text_rounded" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/emailText"/>
    <Button
            android:text="Log In"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/loginButton"
            android:background="@drawable/default_button" android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="@+id/passwordText"
            app:layout_constraintStart_toStartOf="@+id/passwordText" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" android:textSize="24sp" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/passwordText" android:paddingBottom="10dp"
            android:paddingTop="10dp" android:textAllCaps="false"/>
    <Button
            android:text="Register New Account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registerButton"
            android:background="@android:color/transparent" android:textStyle="italic"
            android:textColor="@android:color/darker_gray" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/loginButton"
            android:textAllCaps="false"/>
    <Button
            android:text="Forgot Password?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forgotPasswordButton"
            android:background="@android:color/transparent" android:textStyle="italic"
            android:textColor="@android:color/darker_gray" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintEnd_toEndOf="parent"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@+id/registerButton"/>
</android.support.constraint.ConstraintLayout>