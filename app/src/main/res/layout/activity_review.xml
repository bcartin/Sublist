<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ReviewActivity">

    <android.support.v7.widget.Toolbar
            android:id="@+id/review_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/black"
            android:elevation="4dp"
            app:title="Name"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/review_toolbar">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                        android:gravity="center">
            <TextView
                    android:text="Add Review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2" android:textStyle="bold"
                    android:textSize="30sp" android:textColor="@android:color/black"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/review_toolbar"/>
            <android.support.constraint.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" android:id="@+id/constraintLayout">

                <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        app:srcCompat="@drawable/empty_star"
                        android:id="@+id/star04"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="4dp"
                        app:layout_constraintStart_toEndOf="@+id/star03"/>
                <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        app:srcCompat="@drawable/empty_star"
                        android:id="@+id/star01"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        app:srcCompat="@drawable/empty_star"
                        android:id="@+id/star02"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="4dp"
                        app:layout_constraintStart_toEndOf="@+id/star01"/>
                <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        app:srcCompat="@drawable/empty_star"
                        android:id="@+id/star03"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="4dp"
                        app:layout_constraintStart_toEndOf="@+id/star02"/>
                <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        app:srcCompat="@drawable/empty_star"
                        android:id="@+id/star05"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="4dp"
                        app:layout_constraintStart_toEndOf="@+id/star04"/>
            </android.support.constraint.ConstraintLayout>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Address" android:background="@drawable/edit_text_rounded"
                    app:layout_constraintHorizontal_bias="0.5"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp" android:padding="10dp" android:layout_marginTop="16dp"
                    android:inputType="textPersonName"
                    android:id="@+id/addressEditText"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />
            <Button
                    android:text="Service"
                    android:layout_width="215dp"
                    android:layout_height="45dp" android:id="@+id/serviceButton"
                    android:background="@drawable/edit_text_rounded" android:textAllCaps="false"
                    android:textAlignment="textStart" android:layout_marginTop="16dp" android:paddingLeft="10dp"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="20dp">
                <TextView
                        android:text="Workmanship"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="36dp"
                        android:layout_weight="1"
                        android:id="@+id/textView3" android:textSize="18sp"
                        android:textStyle="italic" android:textColor="@android:color/black"/>
                <android.support.constraint.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/workmanshipLayout"
                        android:layout_marginRight="36dp">

                    <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            app:srcCompat="@drawable/empty_star"
                            android:id="@+id/star13"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginStart="4dp"
                            app:layout_constraintStart_toEndOf="@+id/star12"/>
                    <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            app:srcCompat="@drawable/empty_star"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:id="@+id/star11"/>
                    <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            app:srcCompat="@drawable/empty_star"
                            android:id="@+id/star12"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginStart="4dp"
                            app:layout_constraintStart_toEndOf="@+id/star11"/>
                    <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            app:srcCompat="@drawable/empty_star"
                            android:id="@+id/star15"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginStart="4dp"
                            app:layout_constraintStart_toEndOf="@+id/star14"/>
                    <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            app:srcCompat="@drawable/empty_star"
                            android:id="@+id/star14"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginStart="4dp"
                            app:layout_constraintStart_toEndOf="@+id/star13"/>
                </android.support.constraint.ConstraintLayout>
            </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:gravity="center">
            <TextView
                    android:text="On Schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36dp"
                    android:layout_weight="1"
                    android:id="@+id/textView4" android:textSize="18sp"
                    android:textStyle="italic" android:textColor="@android:color/black"
            />
            <android.support.constraint.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/constraintLayout3"
                    android:layout_marginRight="36dp">

                <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        app:srcCompat="@drawable/empty_star"
                        android:id="@+id/star23"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="4dp"
                        app:layout_constraintStart_toEndOf="@+id/star22"/>
                <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        app:srcCompat="@drawable/empty_star"
                        android:id="@+id/star21"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
                <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        app:srcCompat="@drawable/empty_star"
                        android:id="@+id/star22"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="4dp"
                        app:layout_constraintStart_toEndOf="@+id/star21"/>
                <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        app:srcCompat="@drawable/empty_star"
                        android:id="@+id/star25"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="4dp"
                        app:layout_constraintStart_toEndOf="@+id/star24"/>
                <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        app:srcCompat="@drawable/empty_star"
                        android:id="@+id/star24"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="4dp"
                        app:layout_constraintStart_toEndOf="@+id/star23"/>
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:gravity="center">
            <TextView
                    android:text="On Budget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36dp"
                    android:layout_weight="1"
                    android:id="@+id/textView5" android:textSize="18sp"
                    android:textStyle="italic" android:textColor="@android:color/black"
            />
            <android.support.constraint.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/budgetConstraintLayout"
                    android:layout_marginRight="36dp">

                <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        app:srcCompat="@drawable/empty_star"
                        android:id="@+id/star33"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="4dp"
                        app:layout_constraintStart_toEndOf="@+id/star32"/>
                <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        app:srcCompat="@drawable/empty_star"
                        android:id="@+id/star31"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        app:srcCompat="@drawable/empty_star"
                        android:id="@+id/star32"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="4dp"
                        app:layout_constraintStart_toEndOf="@+id/star31"/>
                <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        app:srcCompat="@drawable/empty_star"
                        android:id="@+id/star35"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="4dp"
                        app:layout_constraintStart_toEndOf="@+id/star34"/>
                <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        app:srcCompat="@drawable/empty_star"
                        android:id="@+id/star34"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="4dp"
                        app:layout_constraintStart_toEndOf="@+id/star33"/>
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:gravity="center">
            <TextView
                    android:text="Communication"
                    android:layout_marginLeft="36dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/textView6" android:textSize="18sp"
                    android:textStyle="italic" android:textColor="@android:color/black"/>


            <android.support.constraint.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/constraintLayout5"
                    android:layout_marginRight="36dp">

                <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        app:srcCompat="@drawable/empty_star"
                        android:id="@+id/star43"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="4dp"
                        app:layout_constraintStart_toEndOf="@+id/star42"/>
                <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        app:srcCompat="@drawable/empty_star"
                        android:id="@+id/star41"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        app:srcCompat="@drawable/empty_star"
                        android:id="@+id/star42"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="4dp"
                        app:layout_constraintStart_toEndOf="@+id/star41"/>
                <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        app:srcCompat="@drawable/empty_star"
                        android:id="@+id/star45"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="4dp"
                        app:layout_constraintStart_toEndOf="@+id/star44"/>
                <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        app:srcCompat="@drawable/empty_star"
                        android:id="@+id/star44"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="4dp"
                        app:layout_constraintStart_toEndOf="@+id/star43"/>
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
            <EditText
                    android:layout_width="280dp"
                    android:layout_height="113dp"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:id="@+id/detailsEditText"
                    android:background="@drawable/edit_text_rounded"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout5" android:padding="5dp"
                    android:gravity="top" android:hint="Comments"/>

            <Button
                    android:text="Add Review"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/addReviewButton"
                    android:background="@drawable/default_button"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:layout_marginTop="24dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:textAllCaps="false"/>
            <Spinner
                    android:layout_width="215dp"
                    android:layout_height="45dp" android:id="@+id/serviceSpinner" android:spinnerMode="dialog"
                    android:background="@drawable/edit_text_rounded"
                    android:visibility="invisible"/>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>