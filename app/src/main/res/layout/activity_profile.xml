<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProfileActivity">

    <android.support.v7.widget.Toolbar
            android:id="@+id/profile_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/black"
            android:elevation="4dp"
            app:title="Name"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:id="@+id/linearLayout2">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent" android:gravity="center_vertical">
            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/call"
                    android:id="@+id/callImageView"

                    tools:layout_editor_absoluteX="32dp" tools:layout_editor_absoluteY="157dp"/>
            <TextView
                    android:text="(469) 688-8056"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/phoneTextView" android:textStyle="italic"
                    tools:layout_editor_absoluteY="247dp" tools:layout_editor_absoluteX="344dp"
                    android:paddingLeft="8dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent" android:gravity="center_vertical">
            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"

                    app:srcCompat="@drawable/aim"
                    tools:layout_editor_absoluteX="260dp"
                    android:id="@+id/targetImageView"
                    tools:layout_editor_absoluteY="157dp"/>
            <TextView
                    android:text="Metal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/targetTextView" android:textStyle="italic"
                    tools:layout_editor_absoluteY="247dp" tools:layout_editor_absoluteX="344dp"
                    android:paddingLeft="8dp" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/profile_toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.0" android:id="@+id/linearLayout">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent" android:gravity="center_vertical">
            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/identification"
                    android:id="@+id/contactImageView"

                    tools:layout_editor_absoluteX="32dp" tools:layout_editor_absoluteY="157dp"/>
            <TextView
                    android:text="Wayne MacEntire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nameTextView" android:textStyle="italic"
                    tools:layout_editor_absoluteY="247dp" tools:layout_editor_absoluteX="344dp"
                    android:paddingLeft="8dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent" android:gravity="center_vertical">
            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"

                    app:srcCompat="@drawable/placeholder"
                    tools:layout_editor_absoluteX="260dp"
                    android:id="@+id/locationImageView"
                    tools:layout_editor_absoluteY="157dp"/>
            <TextView
                    android:text="Plano (50 Mile Radius)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/locationTextView" android:textStyle="italic"
                    tools:layout_editor_absoluteY="247dp" tools:layout_editor_absoluteX="344dp"
                    android:paddingLeft="8dp" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            android:id="@+id/linearLayout3">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent" android:gravity="center_vertical">
            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/envelope"
                    android:id="@+id/envelopeImageView"

                    tools:layout_editor_absoluteX="32dp" tools:layout_editor_absoluteY="157dp"/>
            <TextView
                    android:text="N/A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/emailTextView" android:textStyle="italic"
                    tools:layout_editor_absoluteY="247dp" tools:layout_editor_absoluteX="344dp"
                    android:paddingLeft="8dp"/>
        </LinearLayout>
    </LinearLayout>

    <Button
            android:text="Request Quote"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/requestQuoteButton"
            android:textAllCaps="false"
            android:background="@drawable/default_button"
            android:textColor="@android:color/white"
            android:textSize="18sp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3" android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Add Review"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/addReviewButton"
            android:textAllCaps="false"
            android:background="@drawable/default_button"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@+id/requestQuoteButton" android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@android:color/black"
            app:layout_constraintTop_toBottomOf="@+id/requestQuoteButton"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/reviewsRecyclerView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/divider" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>